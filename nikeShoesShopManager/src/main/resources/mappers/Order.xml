	<update id="orderUpdate" parameterType="com.nss.manager.ordervo.OrderVO">
		UPDATE order_tb
		SET
		orderShipno = #{orderShipno},
		orderStatus = '배송중'
		WHERE
		orderNO = #{orderNO}
	</update>
